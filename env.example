# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=logistics_db
DB_USER=logistics
DB_PASSWORD=logistics_password

# Full database URL (alternative to separate settings)
DATABASE_URL=postgresql://logistics:logistics_password@postgres:5432/logistics_db

# ===================================================================
# API CONFIGURATION
# ===================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
API_RELOAD=True

# ===================================================================
# SECURITY (для Production)
# ===================================================================
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================================================
# CORS CONFIGURATION
# ===================================================================
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ===================================================================
# LOGGING
# ===================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/logistics.log

# ===================================================================
# ENVIRONMENT
# ===================================================================
ENVIRONMENT=development
# Для production используйте: ENVIRONMENT=production
